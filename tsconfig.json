{
  "compilerOptions": {
    "rootDir": "./src/components",
    "declaration": true,
    "declarationDir": "core",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017", "es2019", "es2020", "es2021"],
    "sourceMap": true,
    "declarationMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "./core"
  ]
}
